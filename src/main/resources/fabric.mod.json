{
  "schemaVersion": 1,
  "id": "charmony-tweaks-nano",
  "version": "${mod_version}",

  "name": "Charmony Tweaks (nano)",
  "description": "Small client tweaks without changing core gameplay.",
  "authors": [
    "svenhjol"
  ],
  "icon": "icon.png",

  "license": "MIT",
  "environment": "client",
  "mixins": [
    "charmony-tweaks-nano.mixins.json"
  ],

  "entrypoints": {
    "client": [
      "svenhjol.charmony.tweaks.fabric.ClientInitializer"
    ]
  },

  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "*",
    "java": ">=21",
    "fabric-api": "*",
    "charmony-nano": "${charmony_version}",
    "charmony-api": "${api_version}"
  },

  "contact": {
    "homepage": "https://charmony.work",
    "sources": "https://github.com/svenhjol/${mod_id}"
  }
}