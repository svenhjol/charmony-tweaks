{
  "schemaVersion": 1,
  "id": "charmony-tweaks-nano",
  "version": "${mod_version}",

  "name": "Charmony Tweaks (nano)",
  "description": "Small client tweaks that don't change core gameplay. Compatible with vanilla servers such as Realms.",
  "authors": [
    "svenhjol"
  ],
  "icon": "assets/charmony-tweaks/textures/gui/sprites/icon.png",
  "license": "MIT",
  "environment": "client",
  "mixins": [
    "charmony-tweaks-nano.mixins.json"
  ],
  "accessWidener": "charmony-tweaks-nano.accesswidener",

  "entrypoints": {
    "client": [
      "svenhjol.charmony.tweaks.client.ClientInitializer"
    ]
  },

  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "*",
    "java": ">=21",
    "fabric-api": "*",
    "charmony": "${charmony_version}",
    "charmony-api": "${api_version}"
  },

  "contact": {
    "homepage": "https://charmony.work",
    "sources": "https://github.com/svenhjol/${mod_id}"
  }
}